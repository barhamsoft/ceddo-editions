datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") 
}

generator client {
  provider = "prisma-client-js"
}

model Livre {
  id          Int       @id @default(autoincrement())
  titre       String
  description String
  link        String
  auteur      Auteur    @relation(fields: [auteurId], references: [id])
  auteurId    Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Auteur {
  id          Int       @id @default(autoincrement())
  nom         String
  biographie  String?
  livres      Livre[]   @relation
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Evenement {
  id          Int       @id @default(autoincrement())
  titre       String
  description String
  date        DateTime
  lieu        String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
